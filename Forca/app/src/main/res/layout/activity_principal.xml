                    android:layout_marginTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingRight="1dp" >

                    <LinearLayout android:layout_gravity="left" >

                        <Button
                            android:id="@+id/btnS"
                            style="@style/ButtonTeclado"
                            android:onClick="click"
