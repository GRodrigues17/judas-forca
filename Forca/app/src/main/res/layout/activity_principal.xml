        <LinearLayout
            android:id="@+id/layout_txtTema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/layout_completo" >

            <ImageView
                android:id="@+id/imgTema"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/txtTema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:text="@string/title_selected_theme"
                android:textColor="@color/texts_views" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPalavra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_teclado"
            android:layout_alignLeft="@+id/layout_teclado"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_completo"
            android:layout_width="250dp"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/imgCorpo_Completo"
                android:layout_width="100dp"
                android:layout_height="190dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="135dp"
